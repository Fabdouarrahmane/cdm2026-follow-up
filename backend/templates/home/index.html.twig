{% extends 'base.html.twig' %}

{% block title %}Accueil - CDM 2026{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .phases-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .phase-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            text-decoration: none;
            display: block;
        }

        .phase-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        }

        .phase-card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .phase-card p {
            opacity: 0.9;
            font-size: 0.9rem;
        }

        .match-count {
            background: rgba(255,255,255,0.2);
            padding: 5px 15px;
            border-radius: 20px;
            display: inline-block;
            margin-top: 15px;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <h2>ðŸ“‹ Phases de la compÃ©tition</h2>
        <div id="phases-container" class="loading">
            Chargement des phases...
        </div>
    </div>

    <div class="card">
        <h2>ðŸ”´ Matchs en direct</h2>
        <div id="live-matches" class="loading">
            Chargement des matchs en direct...
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Charger les phases
        async function loadPhases() {
            try {
                const response = await fetch('/api/phases');
                const phases = await response.json();

                const container = document.getElementById('phases-container');
                container.className = 'phases-grid';
                container.innerHTML = phases.map(phase => `
                    <a href="/phase/${phase.id}" class="phase-card">
                        <h3>${phase.nom}</h3>
                        <p>Phase ${phase.ordre}</p>
                        <span class="match-count">Voir les matchs â†’</span>
                    </a>
                `).join('');
            } catch (error) {
                document.getElementById('phases-container').innerHTML =
                    '<div class="error">Erreur lors du chargement des phases</div>';
            }
        }

        // Charger les matchs en direct
        async function loadLiveMatches() {
            try {
                const response = await fetch('/api/matches');
                const matches = await response.json();
                const liveMatches = matches.filter(m => m.statut === 'LIVE');

                const container = document.getElementById('live-matches');

                if (liveMatches.length === 0) {
                    container.innerHTML = '<p style="text-align:center; color:#999;">Aucun match en direct pour le moment</p>';
                    return;
                }

                container.innerHTML = liveMatches.map(match => `
                    <div style="border: 2px solid #667eea; border-radius: 8px; padding: 15px; margin: 10px 0;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div style="flex: 1;">
                                <strong>${match.equipeA.nom}</strong> (${match.equipeA.code})
                            </div>
                            <div style="font-size: 2rem; font-weight: bold; color: #667eea; padding: 0 20px;">
                                ${match.score ? match.score.scoreA : '0'} - ${match.score ? match.score.scoreB : '0'}
                            </div>
                            <div style="flex: 1; text-align: right;">
                                <strong>${match.equipeB.nom}</strong> (${match.equipeB.code})
                            </div>
                        </div>
                        <div style="text-align: center; margin-top: 10px; color: #999; font-size: 0.9rem;">
                            ðŸ”´ EN DIRECT - ${match.phase.nom}
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erreur:', error);
            }
        }

        // Charger au dÃ©marrage
        loadPhases();
        loadLiveMatches();

        // Actualiser les matchs en direct toutes les 3 secondes
        setInterval(loadLiveMatches, 3000);
    </script>
{% endblock %}
