{% extends 'base.html.twig' %}

{% block title %}D√©tail du match - CDM 2026{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .back-link {
            display: inline-block;
            color: white;
            text-decoration: none;
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .match-detail {
            text-align: center;
        }

        .match-info {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
        }

        .match-status-badge {
            display: inline-block;
            padding: 10px 25px;
            border-radius: 30px;
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .status-SCHEDULED {
            background: rgba(255,255,255,0.2);
        }

        .status-LIVE {
            background: #d32f2f;
            animation: pulse 2s infinite;
        }

        .status-FINISHED {
            background: #388e3c;
        }

        .match-teams-detail {
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 40px 0;
        }

        .team-detail {
            flex: 1;
        }

        .team-detail h2 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .team-detail .code {
            font-size: 1.2rem;
            opacity: 0.8;
        }

        .score-detail {
            font-size: 5rem;
            font-weight: bold;
            padding: 0 40px;
        }

        .no-score-detail {
            font-size: 3rem;
            opacity: 0.5;
        }

        .match-metadata {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .meta-item {
            background: #f5f5f5;
            padding: 20px;
            border-radius: 8px;
        }

        .meta-label {
            color: #999;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .meta-value {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}
    <a href="javascript:history.back()" class="back-link">‚Üê Retour</a>

    <div class="card match-detail">
        <div id="match-container" class="loading">
            Chargement du match...
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        const matchId = {{ matchId }};

        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            return date.toLocaleDateString('fr-FR', options);
        }

        async function loadMatch() {
            try {
                const response = await fetch(`/api/matches/${matchId}`);
                const match = await response.json();

                const container = document.getElementById('match-container');
                container.className = 'match-detail';

                const statusText = match.statut === 'LIVE' ? 'üî¥ EN DIRECT' :
                    match.statut === 'FINISHED' ? '‚úÖ MATCH TERMIN√â' : 'üìÖ MATCH √Ä VENIR';

                const score = match.score
                    ? `<div class="score-detail">${match.score.scoreA} - ${match.score.scoreB}</div>`
                    : `<div class="score-detail no-score-detail">- : -</div>`;

                container.innerHTML = `
                    <div class="match-info">
                        <div class="match-status-badge status-${match.statut}">
                            ${statusText}
                        </div>
                        <h3>${match.phase.nom}</h3>
                        <div class="match-teams-detail">
                            <div class="team-detail">
                                <h2>${match.equipeA.nom}</h2>
                                <div class="code">${match.equipeA.code}</div>
                            </div>
                            ${score}
                            <div class="team-detail">
                                <h2>${match.equipeB.nom}</h2>
                                <div class="code">${match.equipeB.code}</div>
                            </div>
                        </div>
                    </div>

                    <div class="match-metadata">
                        <div class="meta-item">
                            <div class="meta-label">Date et heure</div>
                            <div class="meta-value">${formatDate(match.dateHeure)}</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-label">Phase</div>
                            <div class="meta-value">${match.phase.nom}</div>
                        </div>
                        <div class="meta-item">
                            <div class="meta-label">Statut</div>
                            <div class="meta-value">${match.statut}</div>
                        </div>
                        ${match.score && match.score.termineLe ? `
                        <div class="meta-item">
                            <div class="meta-label">Termin√© le</div>
                            <div class="meta-value">${formatDate(match.score.termineLe)}</div>
                        </div>
                        ` : ''}
                    </div>
                `;

                document.title = `${match.equipeA.nom} vs ${match.equipeB.nom} - CDM 2026`;
            } catch (error) {
                document.getElementById('match-container').innerHTML =
                    '<div class="error">Erreur lors du chargement du match</div>';
            }
        }

        // Charger au d√©marrage
        loadMatch();

        // Actualiser toutes les 3 secondes
        setInterval(loadMatch, 3000);
    </script>
{% endblock %}
