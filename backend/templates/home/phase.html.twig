{% extends 'base.html.twig' %}

{% block title %}Matchs de la phase - CDM 2026{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .back-link {
            display: inline-block;
            color: white;
            text-decoration: none;
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .phase-title {
            color: white;
            margin-bottom: 30px;
        }

        .matches-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .match-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .match-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .match-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .match-date {
            color: #999;
            font-size: 0.9rem;
        }

        .match-status {
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: bold;
        }

        .status-SCHEDULED {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-LIVE {
            background: #ffebee;
            color: #d32f2f;
            animation: pulse 2s infinite;
        }

        .status-FINISHED {
            background: #e8f5e9;
            color: #388e3c;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .match-teams {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
        }

        .team {
            flex: 1;
            text-align: center;
        }

        .team-name {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .team-code {
            color: #999;
            font-size: 0.9rem;
        }

        .score {
            font-size: 3rem;
            font-weight: bold;
            color: #667eea;
            padding: 0 30px;
        }

        .no-score {
            font-size: 1.5rem;
            color: #ddd;
        }
    </style>
{% endblock %}

{% block body %}
    <a href="/" class="back-link">‚Üê Retour aux phases</a>

    <div class="phase-title">
        <h1 id="phase-name">Chargement...</h1>
    </div>

    <div class="card">
        <div id="matches-container" class="loading">
            Chargement des matchs...
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        const phaseId = {{ phaseId }};

        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            return date.toLocaleDateString('fr-FR', options);
        }

        async function loadMatches() {
            try {
                // Charger les infos de la phase
                const phaseResponse = await fetch('/api/phases');
                const phases = await phaseResponse.json();
                const phase = phases.find(p => p.id === phaseId);

                if (phase) {
                    document.getElementById('phase-name').textContent = phase.nom;
                    document.title = phase.nom + ' - CDM 2026';
                }

                // Charger les matchs de cette phase
                const matchesResponse = await fetch(`/api/matches?phase=${phaseId}`);
                const matches = await matchesResponse.json();

                const container = document.getElementById('matches-container');

                if (matches.length === 0) {
                    container.innerHTML = '<p style="text-align:center; color:#999;">Aucun match pour cette phase</p>';
                    return;
                }

                container.className = 'matches-list';
                container.innerHTML = matches.map(match => {
                    const score = match.score
                        ? `<div class="score">${match.score.scoreA} - ${match.score.scoreB}</div>`
                        : `<div class="score no-score">- : -</div>`;

                    return `
                        <a href="/match/${match.id}" class="match-card">
                            <div class="match-header">
                                <div class="match-date">${formatDate(match.dateHeure)}</div>
                                <div class="match-status status-${match.statut}">
                                    ${match.statut === 'LIVE' ? 'üî¥ EN DIRECT' :
                        match.statut === 'FINISHED' ? '‚úÖ TERMIN√â' : 'üìÖ √Ä VENIR'}
                                </div>
                            </div>
                            <div class="match-teams">
                                <div class="team">
                                    <div class="team-name">${match.equipeA.nom}</div>
                                    <div class="team-code">${match.equipeA.code}</div>
                                </div>
                                ${score}
                                <div class="team">
                                    <div class="team-name">${match.equipeB.nom}</div>
                                    <div class="team-code">${match.equipeB.code}</div>
                                </div>
                            </div>
                        </a>
                    `;
                }).join('');
            } catch (error) {
                document.getElementById('matches-container').innerHTML =
                    '<div class="error">Erreur lors du chargement des matchs</div>';
            }
        }

        // Charger au d√©marrage
        loadMatches();

        // Actualiser toutes les 3 secondes
        setInterval(loadMatches, 3000);
    </script>
{% endblock %}
